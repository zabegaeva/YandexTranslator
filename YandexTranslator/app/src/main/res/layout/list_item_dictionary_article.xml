<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dic_number_article_text_view"
        android:layout_alignParentStart="true"
        android:textSize="18sp" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/relativ">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/dic_translate_text_view"
            android:layout_marginLeft="10dp"
            android:textColor="#0d569f"
            android:textStyle="normal"
            android:textSize="18sp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="20dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/dic_synonim_text_view"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/dic_translate_text_view"
            android:layout_marginLeft="5dp"
            android:textColor="#0d569f"
            android:textSize="18sp" />
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/dic_meaning_text_view"
        android:textColor="#9f4204"
        android:textSize="18sp"
        android:layout_below="@+id/relativ"
        android:layout_toEndOf="@+id/dic_number_article_text_view"
        android:layout_marginLeft="10dp" />
    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dic_example_list_view"
        android:layout_below="@+id/dic_meaning_text_view"
        android:layout_alignStart="@+id/dic_meaning_text_view">
    </ListView>
</RelativeLayout>